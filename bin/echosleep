#!/usr/bin/env python

import os
import time
import sys

if __name__ == '__main__':
    if len(sys.argv) != 2:
        print "usage: echosleep seconds(float)"
        sys.exit(1)
    t = float(sys.argv[1])
    begin = time.time()
    while True:
        now = time.time()
        print "Sleeping %.1f/%s seconds\r" % (now-begin, t) ,
        sys.stdout.flush()
        if begin + t < now:
            break
        time.sleep(min(begin+t-now, 1.0))

